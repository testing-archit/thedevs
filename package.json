{
    "name": "the-devs",
    "version": "1.0.0",
    "description": "Bennett University PYQ Platform - BETH Stack",
    "type": "module",
    "engines": {
        "node": "22.x"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "start": "tsx dist/index.ts",
        "build": "mkdir -p dist && cp -r src/* dist/ && cp package.json dist/ && cp logo.png dist/ 2>/dev/null || true",
        "db:generate": "drizzle-kit generate:pg",
        "db:push": "drizzle-kit push:pg",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.29.0",
        "express": "^4.18.2",
        "postgres": "^3.4.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.0.0",
        "drizzle-kit": "^0.20.0",
        "tsx": "^4.7.0",
        "typescript": "^5.0.0"
    }
}