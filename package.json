        "postgres": "^3.4.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^20.0.0",
        "drizzle-kit": "^0.20.0",
        "tsx": "^4.7.0",
        "typescript": "^5.0.0"
    }
}
